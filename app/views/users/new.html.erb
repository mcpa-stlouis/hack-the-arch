<% provide(:title, "Sign up") %>

<% if require_payment? %>
	<% provide(:button_text, "Checkout") %>
<% else %>
	<% provide(:button_text, "Create my account") %>
<% end %>

<%= content_tag :h1, 'Sign Up' %>
<%= content_tag :div, class: 'row' do %>
	<%= content_tag :div, class: 'col-md-6 col-md-offset-3' do %>
		<%= render 'form' %>
  <% end %>
<% end %>
